<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type="com.bruyako.client.ui.raw.HomeResources"/>
    <ui:with field='strings' type="com.bruyako.client.ui.string.HomeStrings"/>

    <g:DockLayoutPanel unit="EM" height="100%">
        <g:north size="12">
            <g:FlowPanel>
                <g:Image resource='{res.logo}'/>
            </g:FlowPanel>
        </g:north>

        <g:center>
            <g:HTMLPanel>
                <g:HorizontalPanel width="100%">

                    <g:Cell horizontalAlignment="ALIGN_CENTER">

                        <g:VerticalPanel styleName="{res.style.blackText}">

                            <g:Label
                                    ui:field="helloText"
                                    styleName="{res.style.blackText}"/>

                            <g:HorizontalPanel
                                    verticalAlignment="middle">

                                <g:Button ui:field="buttonSubmit"
                                          text="{strings.logout}"/>

                            </g:HorizontalPanel>

                        </g:VerticalPanel>
                    </g:Cell>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:center>

        <g:south size="2">
            <g:HorizontalPanel width="100%">
                <g:Cell horizontalAlignment="ALIGN_CENTER">
                    <g:Label>@ 2015 Ardas Group</g:Label>
                </g:Cell>
            </g:HorizontalPanel>
        </g:south>
    </g:DockLayoutPanel>


</ui:UiBinder>